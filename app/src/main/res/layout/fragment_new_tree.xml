<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.management.NewTreeFragment">

        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:translationX="0dp"
            android:translationY="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/create_tree"
            android:textSize="17sp"
            android:translationY="-325dp"/>
        <EditText
            android:autofillHints="treeName"
            android:id="@+id/addName"
            android:inputType="textCapSentences|textAutoCorrect"
            android:imeOptions="actionSend"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:translationY="-230dp"
            android:translationX="25dp"
            android:textSize="14sp"
            android:text="@string/new_name_default" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/tree_name"
            android:textSize="14sp"
            android:translationX= "25dp"
            android:translationY="-300dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_button2"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="154dp"
            app:cornerRadius="20dp"
            android:text="@string/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</LinearLayout>